<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>loginLet</servlet-name>
        <servlet-class>com.store.ctrl.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginLet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logoutLet</servlet-name>
        <servlet-class>com.store.ctrl.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutLet</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterLet</servlet-name>
        <servlet-class>com.store.ctrl.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterLet</servlet-name>
        <url-pattern>/register.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowDetailsLet</servlet-name>
        <servlet-class>com.store.ctrl.ShowDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowDetailsLet</servlet-name>
        <url-pattern>/showDetails.do</url-pattern>
    </servlet-mapping>

</web-app>